{
  "version": 2,
  "name": "opendevmada-annuaire",
  "builds": [
    { "src": "front/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/front/index.html" },
    { "source": "/:path*", "destination": "/front/:path*" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}